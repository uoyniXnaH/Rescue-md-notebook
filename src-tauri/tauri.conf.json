{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rescue Notepad",
  "version": "0.2.2",
  "identifier": "com.rescue-md-notebook.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rescue Notepad",
        "width": 1280,
        "height": 720,
        "minWidth": 600,
        "minHeight": 400,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "copyright": "No copyright, enjoy it :)",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
